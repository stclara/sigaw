<p id="notice"><%= notice %></p>


<br>
<table class="table">
<tr>
<th>CÓDIGO</th>
<th>EMAIL</th>
<th>NOME</th>
<th>AÇÃO</th>
</tr>

<% @users.each do |user| %>
  <tr>
    <td width="10%" align='center'><%=h (user.id) %></td>
    <td width="30%" align='left'><%=h (user.mail) %></td>
	<td width="50%" align='left'><%=h (user.name) %></td>
  <td width="10%" align='center'>   
    <%= tooltip link_to(image_tag("edit.png", {:border => 0}), edit_user_path(user)), { :tooltip => 'Editar Registro.' } %>&nbsp
    <%= tooltip link_to(image_tag("delete.png", {:border => 0}), user, :confirm => 'Confirma a exclusão?', :method => :delete), { :tooltip => 'Deletar Registro.' }  %></td>  

  </tr>
<% end %>
</table>
<br>
<p><%= will_paginate @users, :params => {:campo => params[:campo], :chave => params[:chave]} %></p>
